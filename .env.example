# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=executor-service
KAFKA_GROUP_ID=executor-group
KAFKA_TASKS_TOPIC=orchestrator.tasks.http
KAFKA_RESULTS_TOPIC=results.topic
KAFKA_MONITORING_TOPIC=workflow.monitoring.updates

# Database Configuration
DATABASE_URL=postgresql://workflow_user:workflow_pass@localhost:5432/workflow_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# S3 Configuration (Optional - for future use)
S3_BUCKET=workflow-data
AWS_REGION=us-east-1

# Agent Registry Configuration
AGENT_REGISTRY_URL=http://localhost:8080

# Executor-specific Configuration
RUN_ID=
WORKFLOW_PLAN=

# Bridge-specific Configuration
HTTP_TIMEOUT_MS=30000
MAX_RETRIES=3
INITIAL_RETRY_DELAY_MS=1000
MAX_RETRY_DELAY_MS=30000
BACKOFF_MULTIPLIER=2.0
WORKER_CONCURRENCY=10

# Redis Configuration (for circuit breaker and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=0.5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=3
CIRCUIT_BREAKER_WINDOW_SIZE_SECONDS=120

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
