{
  "workflow_id": "circuit-breaker-demo",
  "name": "Circuit Breaker Demo",
  "description": "Simple workflow to demonstrate circuit breaker functionality",
  "start_step": "step-1",
  "steps": {
    "step-1": {
      "id": "step-1",
      "agent_name": "ResearchAgent",
      "input_mapping": {
        "topic": "${workflow.input.topic}"
      },
      "next_step": "step-2"
    },
    "step-2": {
      "id": "step-2",
      "agent_name": "WriterAgent",
      "input_mapping": {
        "research": "${step-1.output.text}",
        "style": "${workflow.input.style}"
      }
    }
  }
}
