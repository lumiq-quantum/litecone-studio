# Example Agent Configuration
# Copy this file to agents.yaml and customize for your environment

agents:
  - name: ResearchAgent
    url: http://research-agent:8081
    description: Agent for conducting research on various topics
    auth_type: none
    timeout_ms: 30000
    retry_config:
      max_retries: 3
      initial_delay_ms: 1000
      max_delay_ms: 30000
      backoff_multiplier: 2.0
  
  - name: WriterAgent
    url: http://writer-agent:8082
    description: Agent for writing content based on research
    auth_type: none
    timeout_ms: 30000
    retry_config:
      max_retries: 3
      initial_delay_ms: 1000
      max_delay_ms: 30000
      backoff_multiplier: 2.0
  
